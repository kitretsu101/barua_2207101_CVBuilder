<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.cv.HelloController"
        style="
            -fx-background-color: linear-gradient(to bottom right, #f0f4ff, #dce6fa);
            -fx-font-family: 'Segoe UI', sans-serif;
        ">

    <children>

        <Text layoutX="134.0" layoutY="128.0" text="Welcome To CV Builder!"
              style="
                -fx-fill: #2a3a5f;
                -fx-font-weight: bold;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 2);
            ">
            <font>
                <Font size="33.0"/>
            </font>
        </Text>

        <Button fx:id="welcomeButton"
                layoutX="254.0"
                layoutY="269.0"
                mnemonicParsing="false"
                onAction="#goTocreateCV"
                text="Create New CV"
                style="
                  -fx-background-color: #3f6bff;
                  -fx-text-fill: white;
                  -fx-padding: 8px 20px;
                  -fx-background-radius: 8;
                  -fx-font-size: 14px;
                  -fx-font-weight: bold;
                  -fx-cursor: hand;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);
              ">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Button fx:id="listButton"
                layoutX="254.0"
                layoutY="320.0"
                mnemonicParsing="false"
                onAction="#goToList"
                text="View Saved CVs"
                style="
                  -fx-background-color: #4CAF50;
                  -fx-text-fill: white;
                  -fx-padding: 8px 20px;
                  -fx-background-radius: 8;
                  -fx-font-size: 14px;
                  -fx-font-weight: bold;
                  -fx-cursor: hand;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);
              ">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

    </children>

</AnchorPane>
