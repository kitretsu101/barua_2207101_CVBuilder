<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="1000.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.cv.create_controller"
        style="
            -fx-background-color: linear-gradient(to bottom right, #f0f4ff, #dce6fa);
            -fx-font-family: 'Segoe UI', sans-serif;
        ">

    <children>
        <VBox layoutX="68.0" layoutY="47.0" spacing="14.0">

            <TextArea fx:id="name" prefHeight="26.0" prefWidth="488.0" promptText="Name"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
                <font><Font size="12.0" /></font>
            </TextArea>

            <TextArea fx:id="email" prefHeight="26.0" prefWidth="488.0" promptText="Email"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
                <font><Font size="12.0" /></font>
            </TextArea>

            <TextArea fx:id="phone" prefHeight="26.0" prefWidth="488.0" promptText="Phone"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
                <font><Font size="12.0" /></font>
            </TextArea>

            <TextArea fx:id="address" prefHeight="26.0" prefWidth="488.0" promptText="Address"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
                <font><Font size="12.0" /></font>
            </TextArea>

            <Text text="Education"
                  style="-fx-fill: #2a3a5f; -fx-font-weight: bold; -fx-font-size: 13;">
            </Text>

            <TextArea fx:id="edu" prefHeight="55.0" prefWidth="383.0" promptText="Add Education"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
            </TextArea>

            <Text text="Skills"
                  style="-fx-fill: #2a3a5f; -fx-font-weight: bold; -fx-font-size: 13;">
            </Text>

            <TextArea fx:id="skills" prefHeight="55.0" prefWidth="383.0" promptText="Add Skills"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
            </TextArea>

            <Text text="Projects"
                  style="-fx-fill: #2a3a5f; -fx-font-weight: bold; -fx-font-size: 13;">
            </Text>

            <TextArea fx:id="projects" prefHeight="55.0" prefWidth="383.0" promptText="Add Projects"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
            </TextArea>

            <Text text="Work Experience"
                  style="-fx-fill: #2a3a5f; -fx-font-weight: bold; -fx-font-size: 13;">
            </Text>

            <TextArea fx:id="work" prefHeight="55.0" prefWidth="383.0" promptText="Add Work Experience"
                      style="-fx-background-radius: 8; -fx-padding: 6; -fx-font-size: 12;">
            </TextArea>

            <Button text="Generate CV" mnemonicParsing="false" onAction="#generatecv"
                    style="
                     -fx-background-color: #3f6bff;
                     -fx-text-fill: white;
                     -fx-padding: 10 20 10 20;
                     -fx-background-radius: 8;
                     -fx-font-size: 13;
                     -fx-font-weight: bold;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);
                 ">
                <font><Font size="12.0" /></font>
            </Button>

        </VBox>
    </children>
</AnchorPane>
